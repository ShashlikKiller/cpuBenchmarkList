<Page x:Class="cpuListApp.View.Frames.LoadingFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cpuListApp.View.Frames" xmlns:viewmodel="clr-namespace:cpuListApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:appWindowVM}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadingFrame">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <DockPanel>
                <TextBlock Foreground="AliceBlue" FontFamily="Cascadia Code" FontSize="25"> Waiting for data...</TextBlock>
            </DockPanel>
            <DockPanel Margin="0,20,9,0">
                <ProgressBar Height="20" Width="275" Visibility="{Binding ProgressBarVisibility}" IsIndeterminate="True"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
