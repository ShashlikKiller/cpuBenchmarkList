<Page x:Class="cpuListApp.View.Frames.EmptyListFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cpuListApp.View.Frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EmptyListFrame">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <DockPanel HorizontalAlignment="Center">
                <TextBlock Foreground="#303030" FontFamily="Cascadia Code" FontSize="25"> CPU list is empty!</TextBlock>
            </DockPanel>
            <DockPanel Margin="0,20,0,0">
                <TextBlock Foreground="#303030" FontFamily="Cascadia Code" FontSize="18"> Please, load data from parse or database.</TextBlock>
            </DockPanel>
        </StackPanel>
    </Grid>
</Page>
