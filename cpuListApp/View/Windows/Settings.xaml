<Window x:Class="cpuListApp.View.Windows.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cpuListApp.View.Windows"
        mc:Ignorable="d"
        Title="Settings" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Word шаблон (Путь)"/>
            <TextBox Height="20" Width="350" Text="{Binding ShablonPath}"/>
            <Label Content="Сгенерированный отчёт (Путь)"/>
            <TextBox Height="20" Width="350" Text="{Binding SaveAsPath}"/>
            <Button Content="Применить" Height="50" Width="150" Margin="0,30,0,0" Command="{Binding ApplyPath}"/>
        </StackPanel>
    </Grid>
</Window>
